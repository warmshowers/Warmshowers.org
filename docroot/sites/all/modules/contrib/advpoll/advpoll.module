function advpoll_block_view($delta = '') {
  $block = array();

  switch ($delta) {
    case 'advpoll_recent':
      $recent = advpoll_get_recent();
      $block['subject'] = t('Most Recent Poll');
      if ($recent) {
        $block['content'] = array(
          '#markup' => $recent,
        );
      }
      break;
    default:
      $block = advpoll_generate_block_view($block, $delta);
      break;
  }
  return $block;
}

