/**
 * Implements hook_nodeapi().
 */
function uc_roles_nodeapi(&$node, $op, $arg3 = NULL, $arg4 = NULL) {
  switch ($op) {
    case 'delete':
      // Deleted node was a product; remove all role associations.
      if (uc_product_is_product($node->type)) {
        uc_roles_node_delete($node->nid);
      }
      break;
    default:
      break;
  }
}

