/**
 * Implements hook_user_load() to add user_location values to user object
 */
function user_location_user_load(&$accounts) {
    $result = db_query('SELECT * FROM {user_location} WHERE uid = in (:uids)', array(':uids' => array_keys($accounts)), array('fetch' => PDO::FETCH_OBJ));
    foreach ($result as $row) {
      foreach ($row as $key => $value) {
        if ($key == 'country' || $key == 'province') {
          $value = strtolower($value);
        } // Force all lower case
        $accounts[$row->uid]->$key = $value;
      }
    }
}

