    1 => t("User-specified"),
    2 => t("Nearly Exact, from Address Data"),
    3 => t("Postal code lookup"),
    4 => t("Premise-level accuracy (google)"),
    5 => t("City/Province lookup"),
    6 => t("City/Country lookup"),
    7 => t("Regional Accuracy"),
    8 => t('Center of country only'),
  );

  // Map location source type to text translation
  $desc = t('unknown');
  if (!empty($source_desc[$source])) {
    $desc = $source_desc[$source];
  }
  return $desc;
}

