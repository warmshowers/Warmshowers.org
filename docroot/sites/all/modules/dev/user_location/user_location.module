/**
 * Implements hook_user_insert() to insert user_location values into db
 *
 * @param  $edit
 * @param  $account
 */
function user_location_user_insert(&$edit, &$account, $category) {
  $account = user_load($account->uid);

  // Only do geocoding if the country is provided in $edit
  // And if source is not user-located
  if (array_key_exists('country', $edit) && $account->source != 1) {
    $location_keys = array('street', 'city', 'province', 'country', 'postal_code');
    $location = array();
    foreach ($location_keys as $key) {
      $location[$key] = array_key_exists($key, $edit) ? $edit[$key] : $account->$key;
    }

    $geocoded_location = _user_location_geocode($location);
    $source = $geocoded_location['source'];
    if ($source <= 8) {
      $edit['source'] = $geocoded_location['source'];
      $edit['latitude'] = $geocoded_location['latitude'];
      $edit['longitude'] = $geocoded_location['longitude'];
      drupal_set_message(t("User location geocoded with accuracy %source", array('%source' => $source)));
      if ($source > 3) {
        drupal_set_message(t("We were unable to completely determine your location. Please set your location using ") . l(t("the Set Map Location tab"), "user/$account->uid/location"));
      }
      else {
        drupal_set_message(t("Your map location has been determined from your address, but please check it using ") . l(t("the Set Map Location tab"), "user/$account->uid/location"));
      }
    }
  }

  $placeholders = "%d,";
  $valuenames = "oid,";
  $fieldlist_values = array();
  foreach (array_keys(_user_location_fieldlist()) as $item) {
    // Create the parts of the insert statement
    if (!array_key_exists($item, $edit)) {
      continue;
    }
    $placeholders .= "'%s',";
    $valuenames .= "$item ,";
    $fieldlist_values[] = $edit[$item];

    // Create the alternate update statement
    $updatestmt .= "$item='%s',";

    // We're supposed to set the edit field empty when we've saved it
    $edit[$item] = NULL;
  }


  $query = "
    insert into {user_location} ($valuenames) values ( $placeholders )
    ON DUPLICATE KEY UPDATE  $updatestmt";
  $values = array_merge(array($account->uid), $fieldlist_values, $fieldlist_values);
  // TODO Please convert this statement to the D7 database API syntax.
  $sqlresult = db_query($query, $values);
  if ($sqlresult == FALSE) {
    watchdog('user_location', "Failed to save user data for user @uid. Query=@query", array('@uid' => $account->uid, '@query' => $query), WATCHDOG_ERROR, "user/{$account->uid}");
    drupal_set_message(t("Sorry - your data was not saved. Please let the administrator know about this message"), 'error');
  }


  $fields = array();

  foreach (array_keys(_user_location_fieldlist()) as $key) {
    if (array_key_exists($key, $edit)) {
      $fields[$key] = $edit[$key];
       $edit[$key] = NULL;  // Required by hook_user so it knows the field has been done
    }
  }
  if (!empty($fields)) {
    try {
      db_merge('user_location')
        ->key($account->uid)
        ->fields($fields)
        ->execute();
    } catch (Exception $e) {
      watchdog_exception('user_location', $e);
    }
  }

}

